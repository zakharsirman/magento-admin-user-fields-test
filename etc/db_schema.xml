<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="admin_user" resource="default" engine="innodb" comment="Admin User Table">
        <column xsi:type="text" name="job_description" nullable="true" comment="Admin User Job Description"/>
        <column xsi:type="varchar" name="phone_number" nullable="true" length="255" comment="Admin User Phone Number"/>
        <column xsi:type="varchar" name="profile_photo" nullable="true" length="255" comment="Admin User Profile Photo"/>
    </table>
</schema>
